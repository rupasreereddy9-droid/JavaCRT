class AverageThread extends Thread {
    public void run() {
        int sum = 0;
        for (int i = 1; i <= 10; i++) {
            sum = sum + i;
        }
        double avg = sum / 10.0;
        System.out.println("The average of the first 10 numbers is: " + avg);
    }
}

class SquareThread extends Thread {
    public void run() {
        int arr[] = {1, 20, 50, 15, 30};

        System.out.println("Squares of numbers in the array:");
        for (int i = 0; i < arr.length; i++) {
            System.out.println("Square of " + arr[i] + ": " + (arr[i] * arr[i]));
        }
    }
}

public class TwoThreadsDemo {
    public static void main(String[] args) throws InterruptedException {

        SquareThread t1 = new SquareThread();
        AverageThread t2 = new AverageThread();

        t1.start();   // First thread starts
        t1.join();    // Wait until t1 completes

        t2.start();   // Second thread starts after t1 finishes
    }
}
